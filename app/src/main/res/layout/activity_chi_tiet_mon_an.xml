<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.menu_online.ChiTietMonAn"
    android:orientation="vertical"
    android:background="#cac4c4">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"></include>
    <TextView
        android:id="@+id/txtRenTen"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="18dp"
        android:fontFamily="casual"
        android:textColor="#000"
        android:textStyle="bold"
        android:gravity="center_vertical"/>
    <ImageView
        android:id="@+id/imgMonAn"
        android:layout_width="365dp"
        android:layout_height="200dp"
        android:layout_gravity="center"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_detail"
        android:layout_gravity="center"
        android:padding="10dp">
        <TextView
            android:id="@+id/txtRenSoLuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txtRenViTri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>
